# Protect admin panel with HTTP Basic Auth
<Files "admin.html">
    AuthType Basic
    AuthName "Admin Access Required"
    AuthUserFile /path/to/.htpasswd
    Require valid-user
</Files>

# Force HTTPS for admin panel
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^admin\.html$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Hide sensitive files
<Files ".htpasswd">
    Order allow,deny
    Deny from all
</Files>
